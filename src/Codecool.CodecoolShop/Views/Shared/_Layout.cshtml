<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Codecool.CodecoolShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/c3b1840293.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Codecool.CodecoolShop</a>
                <button class="navbar-toggler" type="button" Data-toggle="collapse" Data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div id="cart" class="cart" Data-closed="true">
                <i class="fa-solid fa-cart-plus" style="font-size: 18px"></i>
                <div id="cartContainer" class="cart-container">
                    <table>
                        <thead>
                        <tr>
                            <td>Image</td>
                            <td>Name</td>
                            <td>Price</td>
                            <td>Total<br />Price</td>
                        </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                        <tr>
                            <td>
                                <a id="cartLink" href="@Url.Action("Index", "Cart")">See Cart...</a>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            @if (ViewData["user"] != null)
            {
                <a asp-controller="Authentication" asp-action="Logout" role="button" id="logOutBtn" class="mr-3 btn btn-primary ">Logout</a>
                <div class="px-3 py-2 bg-success text-light rounded" style="margin-right: 80px">
                    <p class="mb-0 text-nowrap">Welcome @ViewData["user"]</p>
                </div>
            }
            else
            {
                <div id="authenticationBtns" class="d-flex flex-row text-nowrap" style="margin-right: @(ViewData["user"] == null ? "80px" : "20px")">
                    <a asp-controller="Authentication" asp-action="Login" role="button" id="logInBtn" class="mr-3 btn btn-primary ">Log In</a>
                    <a asp-controller="Authentication" asp-action="Register" role="button" id="registerBtn" class="mr-3 btn btn-primary">Register</a>
                </div>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="modalBackground" class="modal-background"></div>
<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Codecool.CodecoolShop - <a asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
